{% doc %}
  @prompt
    Create an image banner section with a customizable square text box overlay. The text box should have a cream-colored background and be positioned in the lower right corner of the banner image. Include settings to adjust the text box size, background color, text content, and position. The text box should maintain a square or compact rectangular shape and not cover the entire banner.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-banner-{{ ai_gen_id }} {
    display: block;
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .ai-image-banner__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.banner_height }}px;
  }

  .ai-image-banner__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-image-banner__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-image-banner__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-image-banner__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-image-banner__text-box-{{ ai_gen_id }} {
    position: absolute;
    background-color: {{ block.settings.text_box_bg_color }};
    padding: {{ block.settings.text_box_padding }}px;
    width: {{ block.settings.text_box_size }}px;
    min-height: {{ block.settings.text_box_size }}px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    gap: 12px;
    {% if block.settings.text_box_position == 'bottom-right' %}
      bottom: {{ block.settings.text_box_offset_vertical }}px;
      right: {{ block.settings.text_box_offset_horizontal }}px;
    {% elsif block.settings.text_box_position == 'bottom-left' %}
      bottom: {{ block.settings.text_box_offset_vertical }}px;
      left: {{ block.settings.text_box_offset_horizontal }}px;
    {% elsif block.settings.text_box_position == 'top-right' %}
      top: {{ block.settings.text_box_offset_vertical }}px;
      right: {{ block.settings.text_box_offset_horizontal }}px;
    {% elsif block.settings.text_box_position == 'top-left' %}
      top: {{ block.settings.text_box_offset_vertical }}px;
      left: {{ block.settings.text_box_offset_horizontal }}px;
    {% endif %}
  }

  .ai-image-banner__heading-{{ ai_gen_id }} {
    margin: 0;
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.heading_size }}px;
    line-height: 1.2;
    word-wrap: break-word;
  }

  .ai-image-banner__text-{{ ai_gen_id }} {
    margin: 0;
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.body_text_size }}px;
    line-height: 1.5;
    word-wrap: break-word;
  }

  .ai-image-banner__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    transition: opacity 0.3s ease;
  }

  .ai-image-banner__button-{{ ai_gen_id }}:hover {
    opacity: 0.85;
  }

  @media screen and (max-width: 749px) {
    .ai-image-banner__image-wrapper-{{ ai_gen_id }} {
      height: {{ block.settings.banner_height_mobile }}px;
    }

    .ai-image-banner__text-box-{{ ai_gen_id }} {
      width: {{ block.settings.text_box_size | times: 0.8 }}px;
      min-height: {{ block.settings.text_box_size | times: 0.8 }}px;
      padding: {{ block.settings.text_box_padding | times: 0.8 }}px;
      {% if block.settings.text_box_position == 'bottom-right' %}
        bottom: {{ block.settings.text_box_offset_vertical | times: 0.5 }}px;
        right: {{ block.settings.text_box_offset_horizontal | times: 0.5 }}px;
      {% elsif block.settings.text_box_position == 'bottom-left' %}
        bottom: {{ block.settings.text_box_offset_vertical | times: 0.5 }}px;
        left: {{ block.settings.text_box_offset_horizontal | times: 0.5 }}px;
      {% elsif block.settings.text_box_position == 'top-right' %}
        top: {{ block.settings.text_box_offset_vertical | times: 0.5 }}px;
        right: {{ block.settings.text_box_offset_horizontal | times: 0.5 }}px;
      {% elsif block.settings.text_box_position == 'top-left' %}
        top: {{ block.settings.text_box_offset_vertical | times: 0.5 }}px;
        left: {{ block.settings.text_box_offset_horizontal | times: 0.5 }}px;
      {% endif %}
    }

    .ai-image-banner__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-image-banner__text-{{ ai_gen_id }} {
      font-size: {{ block.settings.body_text_size | times: 0.9 }}px;
    }

    .ai-image-banner__button-{{ ai_gen_id }} {
      font-size: {{ block.settings.button_text_size | times: 0.9 }}px;
      padding: 10px 20px;
    }
  }
{% endstyle %}

<image-banner-{{ ai_gen_id }} class="ai-image-banner-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-image-banner__image-wrapper-{{ ai_gen_id }}">
    {% if block.settings.banner_image %}
      <img
        src="{{ block.settings.banner_image | image_url: width: 2000 }}"
        alt="{{ block.settings.banner_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.banner_image.width }}"
        height="{{ block.settings.banner_image.height }}"
        class="ai-image-banner__image-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-image-banner__placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
        <div class="ai-image-banner__empty-state-{{ ai_gen_id }}">
          Add a banner image to get started
        </div>
      </div>
    {% endif %}

    <div class="ai-image-banner__text-box-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-image-banner__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {% endif %}

      {% if block.settings.body_text != blank %}
        <div class="ai-image-banner__text-{{ ai_gen_id }}">{{ block.settings.body_text }}</div>
      {% endif %}

      {% if block.settings.button_text != blank and block.settings.button_link != blank %}
        <a href="{{ block.settings.button_link }}" class="ai-image-banner__button-{{ ai_gen_id }}">
          {{ block.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</image-banner-{{ ai_gen_id }}>

<script>
  (function() {
    class ImageBanner{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }
    }

    customElements.define('image-banner-{{ ai_gen_id }}', ImageBanner{{ ai_gen_id }});
  })();
</script>

{% schema %}
{
  "name": "Banner with text box",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Banner image"
    },
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Image"
    },
    {
      "type": "range",
      "id": "banner_height",
      "min": 300,
      "max": 800,
      "step": 50,
      "unit": "px",
      "label": "Desktop height",
      "default": 600
    },
    {
      "type": "range",
      "id": "banner_height_mobile",
      "min": 200,
      "max": 600,
      "step": 50,
      "unit": "px",
      "label": "Mobile height",
      "default": 400
    },
    {
      "type": "header",
      "content": "Text box"
    },
    {
      "type": "select",
      "id": "text_box_position",
      "label": "Position",
      "options": [
        {
          "value": "bottom-right",
          "label": "Bottom right"
        },
        {
          "value": "bottom-left",
          "label": "Bottom left"
        },
        {
          "value": "top-right",
          "label": "Top right"
        },
        {
          "value": "top-left",
          "label": "Top left"
        }
      ],
      "default": "bottom-right"
    },
    {
      "type": "range",
      "id": "text_box_size",
      "min": 200,
      "max": 500,
      "step": 20,
      "unit": "px",
      "label": "Size",
      "default": 300
    },
    {
      "type": "range",
      "id": "text_box_padding",
      "min": 20,
      "max": 60,
      "step": 5,
      "unit": "px",
      "label": "Padding",
      "default": 30
    },
    {
      "type": "range",
      "id": "text_box_offset_horizontal",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "Horizontal offset",
      "default": 40
    },
    {
      "type": "range",
      "id": "text_box_offset_vertical",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "Vertical offset",
      "default": 40
    },
    {
      "type": "color",
      "id": "text_box_bg_color",
      "label": "Background color",
      "default": "#f5ecd2"
    },
    {
      "type": "header",
      "content": "Text content"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to our store"
    },
    {
      "type": "richtext",
      "id": "body_text",
      "label": "Body text",
      "default": "<p>Discover our latest collection</p>"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#121212"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 16,
      "max": 48,
      "step": 2,
      "unit": "px",
      "label": "Heading size",
      "default": 32
    },
    {
      "type": "range",
      "id": "body_text_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Body text size",
      "default": 16
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Background color",
      "default": "#8fab3a"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Text color",
      "default": "#f5ecd2"
    },
    {
      "type": "range",
      "id": "button_text_size",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Text size",
      "default": 14
    },
    {
      "type": "range",
      "id": "button_border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Border radius",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Banner with text box"
    }
  ]
}
{% endschema %}
