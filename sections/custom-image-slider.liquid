
{% schema %}
{
  "name": "Custom Image Slider",
  "tag": "section",
  "class": "custom-image-slider",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Follow Us on Instagram"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "See how our community uses our products"
    },
    {
      "type": "textarea",
      "id": "small_text",
      "label": "Small Text",
      "default": "Tap any image to view it on Instagram."
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Slider Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Image Link (Instagram URL)"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Custom Image Slider",
      "blocks": [
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" }
      ]
    }
  ]
}
{% endschema %}

<style>
.custom-image-slider {
  padding-block: 60px;
}

.custom-image-slider__inner {
  text-align: center;
}

.custom-image-slider__heading {
  font-size: 36px;
  margin-bottom: 8px;
}

.custom-image-slider__subheading {
  font-size: 18px;
  margin-bottom: 6px;
}

.custom-image-slider__text {
  font-size: 14px;
  margin-bottom: 40px;
  opacity: 1;
  color: #000;
  font-weight: 600;
  display: inline-block;
  text-align: center;
}

.custom-image-slider__text:after {
    content: "";
    display: block;
    width: 100%;
    height: 1px;
    margin-top: 2px;
    background-color: #000;
}

/* Slider wrapper */
.custom-image-slider__wrapper {
  position: relative;
}

/* Slider item */
.custom-image-slider__item {
  position: relative;
  display: block;
  overflow: hidden;
}

.custom-image-slider__item img {
  width: 100%;
  height: auto;
  display: block;
  transition: opacity 0.3s ease;
}

/* Overlay */
.custom-image-slider__overlay {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.25);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.custom-image-slider__overlay svg {
  width: 32px;
  height: 32px;
  fill: #fff;
}

/* Hover effect */
.custom-image-slider__item:hover img {
  opacity: 0.6;
}

.custom-image-slider__item:hover .custom-image-slider__overlay {
  opacity: 1;
}

/* Navigation arrows */
.custom-image-slider__nav {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28px;
  cursor: pointer;
  user-select: none;
  z-index: 2;
}

.custom-image-slider__prev {
  left: -30px;
}

.custom-image-slider__next {
  right: -30px;
}

/* Mobile */
@media (max-width: 768px) {
  .custom-image-slider__heading {
    font-size: 26px;
  }

  .custom-image-slider__prev {
    left: -10px;
  }

  .custom-image-slider__next {
    right: -10px;
  }
}
</style>

<div class="custom-image-slider">
  <div class="custom-image-slider__inner page-width">

    <h2 class="custom-image-slider__heading">
      {{ section.settings.heading }}
    </h2>

    <p class="custom-image-slider__subheading">
      {{ section.settings.subheading }}
    </p>

    <p class="custom-image-slider__text">
      {{ section.settings.small_text }}
    </p>

    <div class="custom-image-slider__wrapper">
      <div class="swiper custom-image-slider__swiper">
        <div class="swiper-wrapper">

          {% for block in section.blocks %}
            {% if block.settings.image != blank %}
              <div class="swiper-slide">
                <a
                  href="{{ block.settings.link }}"
                  class="custom-image-slider__item"
                  {% if block.settings.link != blank %}
                    target="_blank" rel="noopener"
                  {% endif %}
                >
                  <img
                    src="{{ block.settings.image | image_url: width: 400 }}"
                    alt=""
                    loading="lazy"
                  >

                  <span class="custom-image-slider__overlay">
                    <!-- Instagram Icon -->
                    <svg viewBox="0 0 24 24" aria-hidden="true">
                      <path d="M7 2h10a5 5 0 015 5v10a5 5 0 01-5 5H7a5 5 0 01-5-5V7a5 5 0 015-5zm5 5a5 5 0 100 10 5 5 0 000-10zm6.5-.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z"/>
                    </svg>
                  </span>
                </a>
              </div>
            {% endif %}
          {% endfor %}

        </div>
      </div>

      <div class="custom-image-slider__nav custom-image-slider__prev">‹</div>
      <div class="custom-image-slider__nav custom-image-slider__next">›</div>
    </div>

  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function () {
  new Swiper('.custom-image-slider__swiper', {
    slidesPerView: 3,
    spaceBetween: 10,
    navigation: {
      nextEl: '.custom-image-slider__next',
      prevEl: '.custom-image-slider__prev'
    },
    breakpoints: {
      769: {
        slidesPerView: 6
      }
    }
  });
});
</script>