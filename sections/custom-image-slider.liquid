
{% schema %}
{
  "name": "Custom Image Slider",
  "tag": "section",
  "class": "custom-image-slider",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Follow Us on Instagram"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "See how our community uses our products"
    },
    {
      "type": "textarea",
      "id": "small_text",
      "label": "Small Text",
      "default": "Tap any image to view it on Instagram."
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Slider Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Image Link (Instagram URL)"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Custom Image Slider",
      "blocks": [
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" },
        { "type": "image" }
      ]
    }
  ]
}
{% endschema %}

<style>
.custom-image-slider {
  padding-bottom: 30px;
}

.custom-image-slider__inner {
  text-align: center;
  padding-inline: .5rem;
}

.custom-image-slider__heading {
  font-size: 36px;
  margin-bottom: 8px;
}

.custom-image-slider__subheading {
  font-size: 18px;
  margin-bottom: 6px;
}

.custom-image-slider__text {
  font-size: 14px;
  margin-bottom: 40px;
  opacity: 1;
  color: #000;
  font-weight: 600;
  display: inline-block;
  text-align: center;
}

.custom-image-slider__text:after {
    content: "";
    display: block;
    width: 100%;
    height: 1px;
    margin-top: 2px;
    background-color: #000;
}

/* Slider wrapper */
.custom-image-slider__wrapper {
  position: relative;
}

/* Slider item */
.custom-image-slider__item {
  position: relative;
  display: block;
  overflow: hidden;
}

.custom-image-slider__item img {
  width: 100%;
  height: auto;
  display: block;
  transition: opacity 0.3s ease;
}

/* Overlay */
.custom-image-slider__overlay {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.25);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.custom-image-slider__overlay svg {
  width: 32px;
  height: 32px;
  fill: #fff;
}

/* Hover effect */
.custom-image-slider__item:hover img {
  opacity: 0.6;
}

.custom-image-slider__item:hover .custom-image-slider__overlay {
  opacity: 1;
}

/* Navigation arrows */
.custom-image-slider__nav {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  font-size: 80px;
  cursor: pointer;
  user-select: none;
  z-index: 2;
}

.custom-image-slider__prev {
  left: 10px;
}

.custom-image-slider__next {
  right: 10px;
}

/* Mobile */
@media (max-width: 768px) {
  .custom-image-slider__heading {
    font-size: 26px;
  }

  .custom-image-slider__prev {
    left: -10px;
  }

  .custom-image-slider__next {
    right: -10px;
  }
}
</style>

<div class="custom-image-slider">
  <div class="custom-image-slider__inner">

    <h2 class="custom-image-slider__heading">
      {{ section.settings.heading }}
    </h2>

    <p class="custom-image-slider__subheading">
      {{ section.settings.subheading }}
    </p>

    <p class="custom-image-slider__text">
      {{ section.settings.small_text }}
    </p>

    <div class="custom-image-slider__wrapper">
      <div class="swiper custom-image-slider__swiper">
        <div class="swiper-wrapper">

          {% for block in section.blocks %}
            {% if block.settings.image != blank %}
              <div class="swiper-slide">
                <a
                  href="{{ block.settings.link }}"
                  class="custom-image-slider__item"
                  {% if block.settings.link != blank %}
                    target="_blank" rel="noopener"
                  {% endif %}
                >
                  <img
                    src="{{ block.settings.image | image_url: width: 400 }}"
                    alt=""
                    loading="lazy"
                  >

                  <span class="custom-image-slider__overlay">
                    <!-- Instagram Icon -->
                   <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" fill="#000000" width="800px" height="800px" viewBox="0 0 32 32" id="Camada_1" version="1.1" xml:space="preserve">

<g>

<path d="M22.3,8.4c-0.8,0-1.4,0.6-1.4,1.4c0,0.8,0.6,1.4,1.4,1.4c0.8,0,1.4-0.6,1.4-1.4C23.7,9,23.1,8.4,22.3,8.4z"/>

<path d="M16,10.2c-3.3,0-5.9,2.7-5.9,5.9s2.7,5.9,5.9,5.9s5.9-2.7,5.9-5.9S19.3,10.2,16,10.2z M16,19.9c-2.1,0-3.8-1.7-3.8-3.8   c0-2.1,1.7-3.8,3.8-3.8c2.1,0,3.8,1.7,3.8,3.8C19.8,18.2,18.1,19.9,16,19.9z"/>

<path d="M20.8,4h-9.5C7.2,4,4,7.2,4,11.2v9.5c0,4,3.2,7.2,7.2,7.2h9.5c4,0,7.2-3.2,7.2-7.2v-9.5C28,7.2,24.8,4,20.8,4z M25.7,20.8   c0,2.7-2.2,5-5,5h-9.5c-2.7,0-5-2.2-5-5v-9.5c0-2.7,2.2-5,5-5h9.5c2.7,0,5,2.2,5,5V20.8z"/>

</g>

</svg>
                  </span>
                </a>
              </div>
            {% endif %}
          {% endfor %}

        </div>
      </div>

      <div class="custom-image-slider__nav custom-image-slider__prev">‹</div>
      <div class="custom-image-slider__nav custom-image-slider__next">›</div>
    </div>

  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function () {
  new Swiper('.custom-image-slider__swiper', {
    slidesPerView: 3,
    spaceBetween: 10,
    navigation: {
      nextEl: '.custom-image-slider__next',
      prevEl: '.custom-image-slider__prev'
    },
    breakpoints: {
      769: {
        slidesPerView: 6
      }
    }
  });
});
</script>