<section class="dog-benefits-section" id="dog-benefits-{{ section.id }}">
  <div class="dog-benefits-container">
    {% if section.settings.heading != blank %}
      <h2 class="dog-benefits-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="dog-benefits-grid">
      {% for block in section.blocks %}
        <div class="dog-benefit-block" style="
          background-color: {{ block.settings.bg_color }};
          padding: {{ block.settings.padding }}px;
          border-radius: {{ block.settings.border_radius }}px;
        ">
          {% if block.settings.icon != blank %}
            <img src="{{ block.settings.icon | image_url: width: 80 }}" alt="{{ block.settings.title }}" class="dog-benefit-icon">
          {% endif %}
          <h3 class="dog-benefit-title">{{ block.settings.title }}</h3>
          <p class="dog-benefit-text">{{ block.settings.text }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>


<style>
 .dog-benefits-section {
  padding: 60px 20px;
  text-align: center;
}

.dog-benefits-container {
  max-width: 1200px;
  margin: 0 auto;
}

.dog-benefits-heading {
  font-size: 28px;
  font-weight: 600;
  margin-bottom: 40px;
}

.dog-benefits-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24px;
}

.dog-benefit-block {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.dog-benefit-block:hover {
  transform: translateY(-5px);
  box-shadow: 0px 8px 20px rgba(0,0,0,0.1);
}

.dog-benefit-icon {
  width: 60px;
  height: 60px;
  margin-bottom: 16px;
  object-fit: contain;
}

.dog-benefit-title {
  font-size: 18px;
  font-weight: 600;
  margin-bottom: 8px;
}

.dog-benefit-text {
  font-size: 14px;
  line-height: 1.6;
  color: #555;
}

@media (max-width: 768px) {
  .dog-benefits-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 16px;
  }
}

</style>


{% schema %}
{
  "name": "Dog Benefits / Features",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Dog Life Benefits"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Feature Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Feature Title",
          "default": "Mobility Handles"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Feature Text",
          "default": "Easy to carry and handle for every outing"
        },
        {
          "type": "color",
          "id": "bg_color",
          "label": "Background Color",
          "default": "#f9f9f9"
        },
        {
          "type": "range",
          "id": "padding",
          "label": "Padding (px)",
          "min": 20,
          "max": 60,
          "step": 2,
          "default": 30
        },
        {
          "type": "range",
          "id": "border_radius",
          "label": "Border Radius (px)",
          "min": 0,
          "max": 40,
          "step": 2,
          "default": 16
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Dog Benefits Section",
      "blocks": [
        { "type": "feature", "settings": { "title": "Mobility Handles", "text": "Easy to carry and handle for every outing" } },
